@using KRS_G54.Models
@using Microsoft.AspNetCore.Http;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    ::-webkit-scrollbar {
        width: 12px;
    }

    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
        background: #888; 
        border-radius: 10px; 
    }

        ::-webkit-scrollbar-thumb:hover {
            background: #555; 
        }
    .select-with-scroll {
        overflow-y: auto;
        max-height: 200px;
    }
</style>
<div class="content-block">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div style="padding-left:15px" class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        SPRING2024
                    </button>
                    <div class="dropdown-menu select-with-scroll" aria-labelledby="dropdownMenuButton">
                        @foreach (Semester item in ViewBag.semesters)
                        {
                            <a class="dropdown-item semester" id="semester-item-@item.SemesterName" href="#" data-id="@item.SemesterId">@item.SemesterName</a>
                        }
                    </div>
                </div>
                <div style="padding-top:20px" class="section-area section-sp1">
                    <div class="container">
                        @foreach (Semester item in ViewBag.semesters)
                        {
                            <div class="ttr-blog-grid-3 row semester-classes" id="semester-@item.SemesterId">
                                @if (!((IEnumerable<Class>)ViewBag.classes).Where(c => c.SemesterId == item.SemesterId).Any())
                                {
                                    <div style="text-align:center; width:100%;">
                                        <img src="~/images/box-no-data-KZXFWQlG.png" alt="Cardboard Box" style="width:250px;" />
                                        <div style="color:blue">No data available</div>
                                        <h3>Please contact your school administration for more information.</h3>
                                    </div>
                                }else
                                {
                                    @foreach (Class classItem in ((IEnumerable<Class>)ViewBag.classes).Where(c => c.SemesterId == item.SemesterId))
                                    {

                                        <div class="post action-card col-lg-4 col-md-6 col-sm-12 col-xs-12 m-b40">
                                            <div class="recent-news">
                                                <div class="info-bx">
                                                    <h5 class="post-title">
                                                        <a href="@Url.Action("Index", "Class", new { id = classItem.ClassId})">

                                                            (@classItem.Subject.SubjectCode.Trim()<->[@classItem.Semester.SemesterName])
                                                                <div title="@classItem.Subject.SubjectName">@classItem.Subject.SubjectName.Substring(0,24)...</div>
                                                        </a>
                                                    </h5>

                                                    <ul style="list-style-type: none;">
                                                        <li>Class: @classItem.ClassName</li>
                                                        <li>Number of students: @classItem.Capacity</li>
                                                    </ul>
                                                    <div class="post-extra">
                                                        <a href="@Url.Action("Index", "Class", new { id = classItem.ClassId})" class="btn-link" style="text-decoration:none">Go to class -></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                               
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Blog Grid ==== -->
    <!-- Blog Grid END ==== -->
</div>
<!-- Content END-->
<!-- Footer ==== -->

<button class="back-to-top fa fa-chevron-up"></button>

