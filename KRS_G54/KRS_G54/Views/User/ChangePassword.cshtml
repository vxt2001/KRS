@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="ChangePassword" asp-controller="User" method="post">
    <!-- Content -->
    <div class="content-block">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 m-b30">
                    <div class="profile-content-bx">
                        <div class="tab-content">
                            <div class="tab-pane active" id="change-password">

                                <div class="profile-head">
                                    <h3>Change Password</h3>
                                </div>
                                <div class="change-password">
                                    @if (ViewData.ModelState.IsValid == false)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                            {
                                                <span>@error.ErrorMessage</span>
                                                <br />
                                            }
                                        </div>
                                    }
                                    <div class="form-group row" style="margin:30px;">
                                        <label class="col-12 col-sm-3 col-form-label">Current Password</label>
                                        <div class="col-12 col-sm-9">
                                            <input class="form-control" type="password" name="currentPassword" required>
                                        </div>
                                    </div>
                                    <div class="form-group row" style="margin:30px;">
                                        <label class="col-12 col-sm-3 col-form-label">New Password</label>
                                        <div class="col-12 col-sm-9">
                                            <input class="form-control" type="password" name="newPassword" required>
                                        </div>
                                    </div>
                                    <div class="form-group row" style="margin:30px;">
                                        <label class="col-12 col-sm-3 col-form-label">Confirm New Password</label>
                                        <div class="col-12 col-sm-9">
                                            <input class="form-control" type="password" name="confirmNewPassword" required>
                                        </div>
                                    </div>
                                   
                                    <div class="seperator"></div>
                                    <div class="text-center" style="margin:30px;">
                                        <button type="submit" class="btn">Change Password</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Content END-->
</form>
<script>
    function sendVerificationCode() {
        // Gửi yêu cầu AJAX đến phương thức SendVerificationCode trong UserController
        $.ajax({
            url: '/User/SendVerificationCode',
            type: 'POST',
            success: function (response) {
                // Xử lý phản hồi từ server (nếu cần)
                if (response.success) {
                    alert('Verification code sent successfully.');
                } else {
                    alert('Failed to send verification code.');
                }
            },
            error: function () {
                // Xử lý lỗi (nếu có)
                alert('Failed to send verification code.');
            }
        });
    }
</script>