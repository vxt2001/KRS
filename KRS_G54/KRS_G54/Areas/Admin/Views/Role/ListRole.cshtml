@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model IPagedList<KRS_G54.Models.Role>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Manager Page";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Role Management</h1>



<div class="container" style="margin:0px">
    <div class="row" style=" display: inline-flex;justify-content: space-around;">

       

        <div class="col">
            <div class="dropdown" >
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Fillter by Status...
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownSortButton">
                    <a class="dropdown-item" href="@Url.Action("FilterByStatus", new { status = (bool?)null })">All</a>
                    <a class="dropdown-item" href="@Url.Action("FilterByStatus", new { status = true })">Active</a>
                    <a class="dropdown-item" href="@Url.Action("FilterByStatus", new { status = false })">Inactive</a>
                </div>
            </div>
        </div>

        <div class="col">

            <form asp-controller="Role" asp-action="Search">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Search..." value="@ViewBag.SearchString">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
             
            </form>
        </div>


    </div>
</div>

<table class="table" style="margin-top:30px">
    <thead>
        <tr>
           
            <th>Name <a href="@Url.Action("SortByName", new { sortOrder = "asc" })"><span class="arrow-up"></span></a>  <a href="@Url.Action("SortByName", new { sortOrder = "desc" })"><span class="arrow-down"></span></a></th>
            <th>Description</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
              
                <td>@role.RoleName</td>
                <td>@role.Description</td>
                <td>@(role.Status ? "Activate" : "Deactivate")</td>
                <td>
                    <form method="post" asp-action="UpdateStatus">
                        <input type="hidden" name="Id" value="@role.RoleId" />
                        <div class="d-flex align-items-center">
                            @if (role.Status)
                            {
                                <button type="submit" class="btn btn-warning fixed-size-button" style="margin-right:10px" onclick="return confirm('Are you sure to Deactivate this ?')">
                                    Deactivate
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success fixed-size-button" style="margin-right:10px" onclick="return confirm('Are you sure to Activate this ?')">
                                    Activate
                                </button>
                            }
                            @Html.ActionLink("Edit", "Edit", new {Id = role.RoleId}, new {@class = "btn btn-success"})
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("ListRole", new { page = Model.PageNumber - 1 })" tabindex="-1" style="background-color: transparent;border: none;">⬅️</a>
            </li>
            @for (var i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("ListRole", new { page = i })">@i</a>
                </li>
            }
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("ListRole", new { page = Model.PageNumber + 1 })" style="background-color: transparent;border: none;">➡️</a>
            </li>
        </ul>
    </nav>
</div>



