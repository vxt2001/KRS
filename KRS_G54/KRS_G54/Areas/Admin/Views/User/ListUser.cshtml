@using KRS_G54.Models;
@using X.PagedList;
@model IPagedList<KRS_G54.Models.Account>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "User Management";

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    ::-webkit-scrollbar {
        width: 12px;
    }

    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 10px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

    .select-with-scroll {
        overflow-y: auto;
        max-height: 200px;
    }
</style>
<h1>User Management</h1>
<div class="container" style="margin:0px">
    <div class="row" style=" display: inline-flex;justify-content: space-around;">

       

        <div class="col">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Fillter by Status...
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownSortButton">
                    <a class="dropdown-item" href="@Url.Action("FilterByStatus", new { status = (bool?)null })">All</a> <!-- Tùy chọn "All" -->
                    <a class="dropdown-item" href="@Url.Action("FilterByStatus", new { status = true })">Active</a>
                    <a class="dropdown-item" href="@Url.Action("FilterByStatus", new { status = false })">Inactive</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Filter by Role...
                </button>
                <div class="dropdown-menu select-with-scroll" aria-labelledby="dropdownSortButton">
                    <a class="dropdown-item" href="@Url.Action("FilterByRole", "User", new { roleId = (int?)null })">All</a>
                    @foreach (Role item in ViewBag.Roles)
                    {
                        <a class="dropdown-item" href="@Url.Action("FilterByRole", "User", new { roleId = item.RoleId })">@item.RoleName</a>
                    }
                </div>
            </div>
        </div>
        <div class="col">
            <form asp-controller="User" asp-action="Search" method="get">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" id="searchInput" placeholder="Search..." value="@ViewBag.SearchString">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<table class="table" style="margin-top:30px">
    <thead>
        <tr>
          
            <th>User Name <a href="@Url.Action("SortByName", new { sortOrder = "asc" })"><span class="arrow-up"></span></a>  <a href="@Url.Action("SortByName", new { sortOrder = "desc" })"><span class="arrow-down"></span></a></th>
            <th>Full Name</th>
            <th>Role</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                
                <td>@user.UserName</td>
                <td>@user.FullName</td>
                <td>@user.Role.RoleName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@(user.Status ? "Activate" : "Deactivate")</td>
                <td>
                    <form method="post" asp-action="UpdateStatus">
                        <input type="hidden" name="Id" value="@user.AccountId" />
                        <div class="d-flex align-items-center">
                            @if (user.Status)
                            {
                                <button type="submit" class="btn btn-warning fixed-size-button" style="margin-right:10px" onclick="return confirm('Are you sure to Deactivate this ?')">
                                    Deactivate
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success fixed-size-button" style="margin-right:10px" onclick="return confirm('Are you sure to Activate this ?')">
                                    Activate
                                </button>
                            }
                          
                            @Html.ActionLink("Edit", "Edit", new {Id = user.AccountId}, new {@class = "btn btn-success"})
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("ListUser", new { page = Model.PageNumber - 1 })" tabindex="-1" style="background-color: transparent;border: none;">⬅️</a>
            </li>
            @for (var i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("ListUser", new { page = i })">@i</a>
                </li>
            }
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("ListUser", new { page = Model.PageNumber + 1 })" style="background-color: transparent;border: none;">➡️</a>
            </li>
        </ul>
    </nav>
</div>