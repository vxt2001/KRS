@model KRS_G54.Models.Subject
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="~/ckeditor/ckeditor.js"></script>
<h1 style="text-align:center">Edit Subject</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-lg-6" style="display:none">
                <label asp-for="SubjectId" class="control-label"></label>
                <input asp-for="SubjectId" class="form-control" readonly />
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="SubjectName" class="control-label"></label>
                    <input asp-for="SubjectName" class="form-control" required />
                    <span asp-validation-for="SubjectName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="SubjectCode" class="control-label"></label>
                    <input asp-for="SubjectCode" class="form-control" required />
                    <span asp-validation-for="SubjectCode" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                
                <div class="form-group col-lg-6">
                    <label class="control-label">Subject Manager</label>
                    <select asp-for="AccountId" class="form-control" asp-items="@ViewBag.AccountSelectList">
                    </select>

                    <span asp-validation-for="AccountId" class="text-danger"></span>
                </div>
               
            </div>
            <div class="form-group col-lg-6">
                <label class="control-label">Status</label>
                <br />
                <div class="custom-control custom-switch" style="margin-top:6px">
                    <input type="checkbox" class="custom-control-input" id="toggleStatus" name="Status" value="true" @(Model.Status.GetValueOrDefault() ? "checked" : "") /> 
                    <label class="custom-control-label" for="toggleStatus" id="toggleLabel">@(Model.Status.GetValueOrDefault() ? "Activate" : "Deactivate")</label>
                </div>
                <input type="hidden" name="Status" value="false" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                @Html.TextAreaFor(Model => Model.Description, new {@id = "description",
                @class = "form-control"})
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.ActionLink("Back to List", "Index",new {}, new {@class = "btn btn-outline-primary text-black mr-2"})
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
            
          
        </form>
    </div>
</div>