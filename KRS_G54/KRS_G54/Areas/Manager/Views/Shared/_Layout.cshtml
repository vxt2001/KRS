    <script>
        // Bắt sự kiện khi người dùng nhập liệu vào input
        document.querySelector('input[name="SearchString"]').addEventListener('input', function (event) {
            var searchText = event.target.value.toLowerCase(); // Lấy giá trị nhập vào và chuyển sang chữ thường
            var items = document.querySelectorAll('.dropdown-item'); // Chọn tất cả các item cần lọc

            items.forEach(function (item) {
                var text = item.textContent.toLowerCase(); // Lấy nội dung của mỗi item và chuyển sang chữ thường
                // Nếu nội dung của item chứa từ khóa tìm kiếm thì hiển thị, ngược lại ẩn đi
                if (text.includes(searchText)) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        });
    </script>
