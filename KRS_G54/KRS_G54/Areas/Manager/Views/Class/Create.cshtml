@model KRS_G54.Models.Class
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Create";
    Layout = "/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">Create Class</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label>ClassName<span class="text-danger">*</span></label>
                    <input asp-for="ClassName" class="form-control" />
                    <span asp-validation-for="ClassName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label>Subject<span class="text-danger">*</span></label>
                    <select asp-for="SubjectId" class="form-control" asp-items="@ViewBag.SubjectSelectList">
                    </select>
                    <span asp-validation-for="SubjectId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-lg-6" style="display:none">
                <label>Capacity<span class="text-danger">*</span></label>
                <input asp-for="Capacity" class="form-control" value="0" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label>Semester<span class="text-danger">*</span></label>
                    <select asp-for="SemesterId" class="form-control" asp-items="@ViewBag.SemesterSelectList">
                    </select>
                </div>
                <div class="form-group col-lg-6">
                    <label class="control-label">Status</label>
                    <br />
                    <div class="custom-control custom-switch" style="margin-top:6px">
                        <input type="checkbox" class="custom-control-input" id="toggleStatus" name="Status" value="true" />
                        <label class="custom-control-label" for="toggleStatus" id="toggleLabel">Deactivate</label>
                    </div>
                    <input type="hidden" name="Status" value="false" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                @Html.TextAreaFor(Model => Model.Description, new {@id = "description",
                @class = "form-control"})
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index",new {}, new {@class = "btn btn-outline-primary text-black mr-2"})
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

