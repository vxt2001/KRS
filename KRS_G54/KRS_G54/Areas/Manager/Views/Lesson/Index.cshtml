@using KRS_G54.Models;
@using X.PagedList;
@model IPagedList<KRS_G54.Models.Lesson>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Manager Page";
    Layout = "/Areas/Manager/Views/Shared/_Layout.cshtml";
}
<style>
    ::-webkit-scrollbar {
        width: 12px;
    }

    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 10px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

    .select-with-scroll {
        overflow-y: auto;
        max-height: 200px;
    }
</style>
<h1>Lesson Management</h1>
<div class="container" style="margin:0px">
    <div class="row" style=" display: inline-flex;justify-content: space-around;">
        <div class="col">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Fillter by Subject...
                </button>
                <div class="dropdown-menu select-with-scroll" aria-labelledby="dropdownSortButton">
                    <a class="dropdown-item" href="@Url.Action("FilterBySubject", "Lesson", new { subjectId = (int?)null })">All</a>

                    @foreach (Subject item in ViewBag.Subjects)
                    {
                        <a class="dropdown-item" href="@Url.Action("FilterBySubject", "Lesson", new { subjectId = item.SubjectId })">@item.SubjectCode</a>
                    }
                </div>
            </div>
        </div>
        <div class="col">

            <form asp-controller="Lesson" asp-action="Search">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Search..." value="@ViewBag.SearchString">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<table class="table" style="margin-top:30px">
    <thead>
        <tr>
           
            <th>Topic</th>
            <th>Slot<a title="Sort ascending" href="@Url.Action("SortBySlot", new { sortOrder = "asc" })"><span class="arrow-up"></span></a><a title="Sort descending" href="@Url.Action("SortBySlot", new { sortOrder = "desc" })"><span class="arrow-down"></span></a></th>
            <th>Subject</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var lesson in Model)
        {
            <tr>
                <td>@lesson.Topic</td>
                <td>@lesson.Order</td>
                <td>@lesson.Subject.SubjectCode</td>
                <td>
                    <form method="post" asp-action="UpdateStatus">
                        
                        <div class="d-flex align-items-center">
                            
                           
                            @Html.ActionLink("Edit", "Edit", new {Id = lesson.LessonId}, new {@class = "btn btn-success"})
                        </div>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber - 1 })" tabindex="-1" style="background-color: transparent;border: none;">⬅️</a>
            </li>
            @for (var i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber + 1 })" style="background-color: transparent;border: none;">➡️</a>
            </li>
        </ul>
    </nav>
</div>